<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialLayoutHintAppearance">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/MaterialLayoutHintAppearance</item>
        <item name="android:textColorHint">#C5C5C5</item>
    </style>
    <style name="TextInputLayout.DropDown" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/MaterialLayoutHintAppearance</item>
        <item name="android:textColorHint">#C5C5C5</item>
    </style>
    <style name="MaterialInput">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:capitalize">sentences</item>
    </style>
</resources>